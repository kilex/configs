server {
	listen   146.255.192.18:80; ## listen for ipv4; this line is default and implied

	root /var/www/piratesaga;
	#index index.html index.htm;

	# Make site accessible from http://localhost/
	server_name .pirate.lvll.ru;
	
	access_log  /var/log/nginx/piratesaga.access.log;
        error_log  /var/log/nginx/piiratesaga.error.log;

	#limit_conn perip 5;
        #limit_conn perserver 500;

	#limit_rate_after 1m;
	limit_rate       100k;

	location ~* ^.+\.(jpg|jpeg|gif|png|ico|css|zip|tgz|gz|rar|bz2|doc|xls|exe|pdf|ppt|txt|tar|wav|bmp|rtf|js|mp3)$ {
                expires 12h;
                add_header Cache-Control public;
                #autoindex on;
          }
	location ~* ^.+\.(swf)$ {
                expires 12h;
		limit_rate       500k;
                add_header Cache-Control public;
                #autoindex on;
          }
        location /nginx-status {
                stub_status on;
                access_log off;
                allow 188.40.41.205;
                deny all;
        }
}
